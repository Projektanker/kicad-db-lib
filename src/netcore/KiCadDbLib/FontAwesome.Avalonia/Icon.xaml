<TemplatedControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="FontAwesome.Avalonia.Icon">

    <TemplatedControl.Template>
        <ControlTemplate>
            <Panel Height="{TemplateBinding FontSize}" Width="{TemplateBinding FontSize}">
                <DrawingPresenter HorizontalAlignment="Center" VerticalAlignment="Center"  Drawing="{TemplateBinding Drawing}" />
            </Panel>
        </ControlTemplate>
    </TemplatedControl.Template>
</TemplatedControl>