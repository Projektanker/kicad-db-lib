<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:KiCadDbLib.Controls">
    <Design.PreviewWith>
        <StackPanel Spacing="10">
            <l:LabeledTextBox Label="Database" Text="BindingDatabasePath" />
            <l:LabeledTextBox Label="Symbols" Text="Binding SymbolsPath" />
            <l:LabeledTextBox Label="Footprints" Text="Binding FootprintsPath" />
            <l:LabeledTextBox Label="Output" Text="Binding OutputPath" />
        </StackPanel>
    </Design.PreviewWith>
    <Style Selector="l|LabeledTextBox">
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Spacing="5">
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="\{0\}\{1\}">
                                <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                         Path="Label"/>
                                <Binding RelativeSource="{RelativeSource TemplatedParent}"
                                         Path="IsRequiredAsterisk"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBox Text="{TemplateBinding Text}"/>
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
