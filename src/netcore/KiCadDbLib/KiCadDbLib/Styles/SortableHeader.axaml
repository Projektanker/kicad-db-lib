<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:KiCadDbLib.Controls"
        xmlns:i="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia">
    <Design.PreviewWith>
        <StackPanel Spacing="5" Orientation="Vertical">
            <l:SortableHeader Header="Database" SortDirection="Ascending"/>
            <l:SortableHeader Header="Symbols" SortDirection="Descending"/>
            <l:SortableHeader Header="Footprints" />
        </StackPanel>
    </Design.PreviewWith>
    <Style Selector="l|SortableHeader">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Spacing="10" Orientation="Horizontal">
                    <TextBlock Text="{TemplateBinding Header}"/>
                    <i:Icon />
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="l|SortableHeader[SortDirection=Ascending] i|Icon">
        <Setter Property="Value" Value="fas fa-arrow-up" />
    </Style>

    <Style Selector="l|SortableHeader[SortDirection=Descending] i|Icon">
        <Setter Property="Value" Value="fas fa-arrow-down" />
    </Style>

</Styles>
